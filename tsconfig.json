{
    "compilerOptions": {
        "outDir": "./public/js/",
        "noImplicitAny": true,
        "module": "es2020",
        "target": "es2020",
        "allowJs": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "baseUrl": ".",
        "paths": {
            "@burguillosinfo/*": ["js-src/*"],
            "/*": ["js-src/*"]
        },
	"plugins": [
	    {
		"transform": "typescript-transform-paths"
	    },
	    {
		"transform": "typescript-transform-paths",
		"afterDeclarations": true
	    }
	]
    },
    "include": [
	"js-src/*.ts", "js-src/*/*.ts"
    ]
}
